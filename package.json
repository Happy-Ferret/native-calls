{
  "name": "native-calls",
  "version": "0.0.0",
  "description": "A C++/JavaScript RPC client",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run nodetest && npm run jstest && npm run cpptest",
    "nodetest": "./node_modules/.bin/jasmine-node test/node/",
    "cpptest": "./node_modules/karma/bin/karma start karma-cpp.conf.js --single-run",
    "cppwatch": "./node_modules/karma/bin/karma start karma-cpp.conf.js",
    "jstest": "./node_modules/karma/bin/karma start karma.conf.js --single-run",
    "jswatch": "./node_modules/karma/bin/karma start karma.conf.js",
    "install": "./node_modules/.bin/bower install",
    "serve": "./node_modules/.bin/serve"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/meltuhamy/native-calls"
  },
  "author": "Mohamed Eltuhamy",
  "license": "BSD-2-Clause",
  "dependencies": {
    "bower": "~1.3.2",
    "serve": "~1.4.0",
    "webidl2": "~2.0.4",
    "minimist": "0.0.8"
  },
  "devDependencies": {
    "jasmine-node": "~1.14.3",
    "karma-jasmine": "~0.2.0",
    "requirejs": "~2.1.11",
    "karma-requirejs": "~0.2.1",
    "karma-chrome-launcher": "~0.1.3",
    "karma" : "~0.12.14"
  }
}
